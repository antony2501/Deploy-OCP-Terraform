# Example terraform.tfvars file
# Copy this file to terraform.tfvars and update the values

# Cluster configuration
cluster_name = "my-ocp-cluster"  # Tên cluster - sẽ tạo folder /home/my-ocp-cluster

# Server configuration (đã có sẵn default values)
# server_host     = "192.168.74.130"  # IP server (default)
# server_user     = "root"            # Username (default)
# server_password = "123"             # Password (default)
# server_ssh_port = 22                # SSH port (default)

# OpenShift install-config.yaml variables
base_domain          = "example.com"           # Base domain cho cluster
machine_network_cidr = "10.128.0.0/14"        # Machine network CIDR
service_network_cidr = "172.30.0.0/16"        # Service network CIDR
api_vip              = "10.0.95.18"           # API VIP address
ingress_vip          = "10.0.95.19"           # Ingress VIP address

# vSphere configuration
vsphere_server   = "10.0.55.12"              # vSphere server address (default)
vsphere_user     = "administrator@vsphere.local"  # vSphere username (default)
vsphere_password = "VMware1!VMware1!"        # vSphere password (default)
vsphere_network  = "PG-VLAN195"              # vSphere network name (default)

# OpenShift installation
openshift_version = "4.15.0"                 # OpenShift version
worker_count      = 3                        # Number of worker nodes

# vSphere infrastructure (CẦN ĐIỀN THÔNG TIN THỰC)
datacenter_id    = "datacenter-123"          # vSphere datacenter ID
resource_pool_id = "resgroup-456"            # vSphere resource pool ID  
datastore_id     = "datastore-789"           # vSphere datastore ID
host_system_id   = "host-101"                # vSphere host system ID
network_id       = "dvportgroup-202"         # vSphere network ID
ova_name         = "rhel-coreos-4.15"        # OVA template name
